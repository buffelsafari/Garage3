@model IEnumerable<Garage3.Frontend.Models.ViewModels.GaragesModelView>

    <style>
        .garageCard 
        {
            width: 20rem;            
        }
        
    </style>

    <h1>Garages</h1>



@foreach(var item in Model)
{


    <div class="container-fluid w-100 h-100" style="min-width:100%; min-height:100%">

        <div class="garageCard card shadow float-lg-left m-3">
            <div class="card-header">

                <div class="card-title">
                    @item.Name
                </div>

            </div>
            <div class="card-body">
                <div class="card-text">
                    @item.Description
                </div>

            </div>
            <div class="card-footer">
                HourlyRate:@item.HourlyRate SEK

                <a class="btn btn-primary float-right" asp-action="Details" asp-route-id="@item.GarageId" role="button">Details</a>                

            </div>
        </div>


    </div>

}
